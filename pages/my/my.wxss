.picker-pos {
  margin-top: -130rpx;
  margin-left: 150rpx;
  color: blueviolet;
  }

.btn-new {
  background-color: #333;
  border-radius: 10rpx;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
}

.btn-new-hover {
  background-color: #5e81bf;
}

.list {
  border-top: 1px solid #eee;
  padding-top: 40rpx;
  margin-top: 40rpx;
  line-height: 50rpx;
}

.list-title {
  color: #5e81bf;
}

.list-date {
  font-size: 24rpx;
  color: #ccc;
  margin: 10rpx 0;
}

.divLine {
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
}

.view_divLine {
  width: 96%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 0rpx 2% 0rpx 2%;
}

/* 两个view的样式 */
.view_divLine view {
  width: 88%;
  height: 2rpx;
  background: linear-gradient(to right, #ead6ee, #a0f1ea);
}

.flex {
  display: flex;
}

.flew-title-txt {
  width: 50%;
  text-align: center;
}

.flew-title-txt text {
  font-size: 40rpx;
  font-weight: bold;
}

.flew-number-txt {
  width: 50%;
  text-align: center;
  margin-top: 20rpx;
}

.flew-number-txt text {
  font-size: 30rpx;
  font-weight: lighter;
  color: #333333;
}

.my-bill-title {
  margin-left: 8%;
}

.my-bill {
  display: flex;
  width: 100%;
  margin-top: 2%;
}

.my-bill-classification {
  display: flex;
  width: 80%;
  margin-right: 8%;
}

.my-bill-month {
  height: 100rpx;
  width: 20%;
  margin-left: 8%;
  text-align: center;
  line-height: 100rpx;
  font-weight: bolder;
  font-size: 45rpx;
}

.my-bill-income {
  width: 33%;
  text-align: center;
}

.my-bill-income-title {
  font-size: 38rpx;
  color: #F5F421;
}

.my-bill-spending {
  width: 33%;
  text-align: center;
}

.my-bill-spending-title {
  font-size: 38rpx;
  color: #00f43d;
}

.my-bill-residue {
  width: 33%;
  text-align: center;
}

.my-bill-residue-title {
  font-size: 38rpx;
  color: #ff0000;
}

.line {
  margin: 0 auto;
  width: 2rpx;
  height: 80rpx;
  /* background-color: #a0f1ea; */
  background: linear-gradient(to right, #ead6ee, #a0f1ea);
}

.my-bill-income-count {
  font-size: 25rpx;
  margin-top: 10rpx;
  font-weight: lighter;
  color: #333333;
}

.my-bill-spending-count {
  font-size: 25rpx;
  margin-top: 10rpx;
